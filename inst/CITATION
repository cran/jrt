citHeader("To cite jrt in publications use:")

bibentry(bibtype = "Article",
  title        = "Development of the R library jrt: Automated item response theory procedures for judgment data and their application with the consensual assessment technique
",
  author       = c(as.person("Nils Myszkowski")),
  journal      = "Psychology of Aesthetics, Creativity and the Arts",
  year         = "2021",
  volume       = "15",
  number       = "3",
  pages        = "426-438",
  url          = "http://dx.doi.org/10.1037/aca0000287",
  textVersion  =
  paste("Myszkowski, N. (2021).",
        "Development of the R library jrt: Automated item response theory procedures for judgment data and their application with the consensual assessment technique.",
        "Psychology of Aesthetics, Creativity and the Arts, 15(3), 426-438.")
)
